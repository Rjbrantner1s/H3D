function classNames(...xs) {
  return xs.filter(Boolean).join(" ");
}

function Pill({ children }) {
  return (
    <span className="inline-flex items-center rounded-full border border-zinc-200 bg-white/70 px-3 py-1 text-xs font-medium text-zinc-800 shadow-sm backdrop-blur">
      {children}
    </span>
  );
}

function SectionHeader({ kicker, title, subtitle }) {
  return (
    <div className="mx-auto max-w-3xl text-center">
      {kicker ? (
        <div className="mb-3 flex justify-center">
          <Pill>{kicker}</Pill>
        </div>
      ) : null}
      <h2 className="text-3xl font-semibold tracking-tight text-zinc-950 sm:text-4xl">
        {title}
      </h2>
      {subtitle ? (
        <p className="mt-4 text-base leading-relaxed text-zinc-600 sm:text-lg">
          {subtitle}
        </p>
      ) : null}
    </div>
  );
}

function OfferCard({ offer }) {
  const Icon = offer.icon;
  return (
    <motion.div
      initial={{ opacity: 0, y: 10 }}
      whileInView={{ opacity: 1, y: 0 }}
      viewport={{ once: true, margin: "-80px" }}
      transition={{ duration: 0.35 }}
      className="group relative rounded-3xl border border-zinc-200 bg-white p-6 shadow-sm"
    >
      <div className="flex items-start gap-4">
        <div className="rounded-2xl border border-zinc-200 bg-zinc-50 p-3">
          <Icon className="h-5 w-5 text-zinc-900" />
        </div>
        <div className="min-w-0">
          <h3 className="text-lg font-semibold text-zinc-950">{offer.title}</h3>
          <p className="mt-2 text-sm leading-relaxed text-zinc-600">{offer.blurb}</p>
        </div>
      </div>
      <ul className="mt-5 space-y-2 text-sm text-zinc-700">
        {offer.bullets.map((b) => (
          <li key={b} className="flex gap-2">
            <CheckCircle2 className="mt-0.5 h-4 w-4 text-zinc-900" />
            <span className="leading-relaxed">{b}</span>
          </li>
        ))}
      </ul>
      <div className="mt-6">
        <a
          href={CONTACT.bookingUrl}
          className="inline-flex items-center gap-2 rounded-2xl border border-zinc-200 bg-white px-4 py-2 text-sm font-medium text-zinc-900 shadow-sm transition hover:bg-zinc-50"
        >
          Book / Ask a question <ArrowRight className="h-4 w-4" />
        </a>
      </div>
      <div className="pointer-events-none absolute inset-0 rounded-3xl opacity-0 ring-1 ring-zinc-900/10 transition group-hover:opacity-100" />
    </motion.div>
  );
}

function Gallery({ items, onOpen }) {
  return (
    <div className="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
      {items.map((img) => (
        <button
          key={img.id}
          type="button"
          onClick={() => onOpen(img)}
          className="group relative overflow-hidden rounded-3xl border border-zinc-200 bg-zinc-50 text-left shadow-sm"
        >
          <div className="aspect-[4/3] w-full overflow-hidden">
            <img
              src={img.src}
              alt={img.label}
              className="h-full w-full object-cover transition duration-500 group-hover:scale-[1.03]"
              loading="lazy"
            />
          </div>
          <div className="p-4">
            <p className="text-sm font-medium text-zinc-900">{img.label}</p>
            <p className="mt-1 text-xs text-zinc-600">Click to view</p>
          </div>
        </button>
      ))}
    </div>
  );
}

function Lightbox({ open, image, onClose }) {
  return (
    <AnimatePresence>
      {open ? (
        <motion.div
          className="fixed inset-0 z-50 flex items-center justify-center bg-black/60 p-4"
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          exit={{ opacity: 0 }}
          onClick={onClose}
          role="dialog"
          aria-modal="true"
        >
          <motion.div
            initial={{ scale: 0.98, opacity: 0 }}
            animate={{ scale: 1, opacity: 1 }}
            exit={{ scale: 0.98, opacity: 0 }}
            transition={{ duration: 0.2 }}
            className="relative w-full max-w-5xl overflow-hidden rounded-3xl bg-zinc-950 shadow-2xl"
            onClick={(e) => e.stopPropagation()}
          >
            <button
              type="button"
              onClick={onClose}
              className="absolute right-3 top-3 rounded-2xl bg-white/10 p-2 text-white backdrop-blur hover:bg-white/15"
              aria-label="Close image"
            >
              <X className="h-5 w-5" />
            </button>
            {image ? (
              <img
                src={image.src}
                alt={image.label}
                className="max-h-[80vh] w-full object-contain"
              />
            ) : null}
            {image ? (
              <div className="border-t border-white/10 p-4">
                <p className="text-sm font-medium text-white">{image.label}</p>
              </div>
            ) : null}
          </motion.div>
        </motion.div>
      ) : null}
    </AnimatePresence>
  );
}

function Stat({ label, value }) {
  return (
    <div className="rounded-3xl border border-zinc-200 bg-white p-5 shadow-sm">
      <p className="text-xs font-medium uppercase tracking-wide text-zinc-500">{label}</p>
      <p className="mt-2 text-2xl font-semibold text-zinc-950">{value}</p>
    </div>
  );
}

function Footer() {
  const year = new Date().getFullYear();
  return (
    <footer className="border-t border-zinc-200 bg-white">
      <div className="mx-auto max-w-6xl px-4 py-10 sm:px-6">
        <div className="flex flex-col gap-6 sm:flex-row sm:items-center sm:justify-between">
          <div>
            <p className="text-sm font-semibold text-zinc-950">
              {BRAND.short} · {BRAND.name}
            </p>
            <p className="mt-1 text-sm text-zinc-600">
              © {year} {BRAND.short}. All rights reserved.
            </p>
          </div>
          <div className="flex flex-wrap gap-3">
            <a
              href={CONTACT.bookingUrl}
              className="rounded-2xl border border-zinc-200 bg-white px-4 py-2 text-sm font-medium text-zinc-900 shadow-sm hover:bg-zinc-50"
            >
              Contact
            </a>
            <a
              href="#about"
              className="rounded-2xl border border-zinc-200 bg-white px-4 py-2 text-sm font-medium text-zinc-900 shadow-sm hover:bg-zinc-50"
            >
              About
            </a>
          </div>
        </div>
        <p className="mt-8 text-xs leading-relaxed text-zinc-500">
          Disclaimer: H3D provides fitness coaching and safety-focused firearms instruction.
          Always follow local laws and regulations, prioritize safe storage, and practice within
          approved ranges and environments.
        </p>
      </div>
    </footer>
  );
}

export default function H3DWebsite() {
  const [active, setActive] = useState("home");
  const [lightboxOpen, setLightboxOpen] = useState(false);
  const [lightboxImage, setLightboxImage] = useState(null);

  const stats = useMemo(
    () => [
      { label: "NASM Credentials", value: "CPT · BCS · NC · VC · PES" },
      { label: "Military Experience", value: "10+ years (MO Guard)" },
      { label: "Deployment History", value: "4 deployments · 2 state activations" },
    ],
    []
  );

  const aboutBullets = useMemo(
    () => [
      "Former NASM Certified Personal Trainer",
      "Applied coaching experience with heavy emphasis on diet and nutrition",
      "10+ years Missouri National Guard (Military Police)",
      "4 deployments and 2 state emergency duties",
      "Specializations: Detainee Operations, QRF, Customs & Border Clearance",
      "Active shooter response training; versed in Run, Hide, Fight",
      "Firearm instruction centered on safety and civilian-appropriate fundamentals",
      "Doctrine-driven coaching built on clarity and simplicity",
    ],
    []
  );

  function jumpTo(key) {
    setActive(key);
    const el = document.getElementById(key);
    if (el) el.scrollIntoView({ behavior: "smooth", block: "start" });
  }

  function openImage(img) {
    setLightboxImage(img);
    setLightboxOpen(true);
  }

  function closeImage() {
    setLightboxOpen(false);
    setLightboxImage(null);
  }

  return (
    <div className="min-h-screen bg-zinc-50 text-zinc-900">
      <Lightbox open={lightboxOpen} image={lightboxImage} onClose={closeImage} />

      {/* Top Nav */}
      <div className="sticky top-0 z-40 border-b border-zinc-200 bg-white/80 backdrop-blur">
        <div className="mx-auto flex max-w-6xl items-center justify-between px-4 py-3 sm:px-6">
          <button
            type="button"
            onClick={() => jumpTo("home")}
            className="flex items-center gap-3 text-left"
            aria-label="Go to top"
          >
            <div className="flex h-10 w-10 items-center justify-center rounded-2xl border border-zinc-200 bg-zinc-50">
              <Shield className="h-5 w-5" />
            </div>
            <div>
              <p className="text-sm font-semibold leading-none">{BRAND.short}</p>
              <p className="mt-1 text-xs text-zinc-600 leading-none">{BRAND.tagline}</p>
            </div>
          </button>

          <nav className="hidden items-center gap-1 md:flex">
            {NAV.map((item) => (
              <button
                key={item.key}
                type="button"
                onClick={() => jumpTo(item.key)}
                className={classNames(
                  "rounded-2xl px-3 py-2 text-sm font-medium transition",
                  active === item.key
                    ? "bg-zinc-900 text-white"
                    : "text-zinc-700 hover:bg-zinc-100"
                )}
              >
                {item.label}
              </button>
            ))}
          </nav>

          <div className="flex items-center gap-2">
            <a
              href={CONTACT.bookingUrl}
              className="inline-flex items-center gap-2 rounded-2xl bg-zinc-900 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-zinc-800"
            >
              Book <ArrowRight className="h-4 w-4" />
            </a>
          </div>
        </div>
      </div>

      {/* Hero */}
      <section id="home" className="relative">
        <div className="mx-auto max-w-6xl px-4 py-14 sm:px-6 sm:py-20">
          <div className="grid items-center gap-10 lg:grid-cols-2">
            <div>
              <div className="flex flex-wrap gap-2">
                <Pill>Fitness</Pill>
                <Pill>Home defense readiness</Pill>
                <Pill>Safety-first firearm instruction</Pill>
              </div>
              <h1 className="mt-5 text-4xl font-semibold tracking-tight text-zinc-950 sm:text-5xl">
                {BRAND.name}
              </h1>
              <p className="mt-4 text-lg leading-relaxed text-zinc-600">
                Two disciplines, one mission: build a body that is capable and a mind that is
                responsible. Train for health, train for readiness, train safely.
              </p>

              <div className="mt-7 rounded-3xl border border-zinc-200 bg-white p-6 shadow-sm">
                <div className="flex items-center gap-3">
                  <div className="flex h-10 w-10 items-center justify-center rounded-2xl border border-zinc-200 bg-zinc-50">
                    <Shield className="h-5 w-5" />
                  </div>
                  <div>
                    <p className="text-sm font-semibold text-zinc-950">{BRAND.creedTitle}</p>
                    <p className="text-xs text-zinc-600">Rooted in Wargod Fitness & Firearms</p>
                  </div>
